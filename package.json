{
  "name": "webscaf",
  "version": "1.0.0",
  "description": "Create scaffold of any web project from a single CLI.",
  "author": "thelovekesh @thelovekesh",
  "bin": {
    "webscaf": "./bin/run"
  },
  "homepage": "https://github.com/thelovekesh/webscaf",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "thelovekesh/webscaf",
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/core": "^1",
    "@oclif/plugin-autocomplete": "1.3.0",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-not-found": "2.3.1",
    "@oclif/plugin-plugins": "^2.0.1",
    "@oclif/plugin-update": "3.0.0",
    "@oclif/plugin-warn-if-update-available": "2.0.4",
    "chalk": "5.0.1",
    "inquirer": "8.2.4",
    "@types/inquirer": "8.2.1"
  },
  "devDependencies": {
    "@oclif/test": "^2",
    "@types/chai": "^4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.21",
    "chai": "^4",
    "eslint": "^8.16.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.2",
    "globby": "^11",
    "husky": "8.0.1",
    "lint-staged": "12.4.1",
    "mocha": "^10",
    "nyc": "^15.1.0",
    "oclif": "^3",
    "shx": "^0.3.3",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "oclif": {
    "bin": "webscaf",
    "dirname": "webscaf",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-autocomplete",
      "@oclif/plugin-help",
      "@oclif/plugin-plugins",
      "@oclif/plugin-not-found",
      "@oclif/plugin-update",
      "@oclif/plugin-warn-if-update-available"
    ],
    "warn-if-update-available": {
      "timeoutInDays": 7,
      "message": "<%= config.name %> update available from <%= chalk.greenBright(config.version) %> to <%= chalk.greenBright(latest) %>."
    },
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "lint:fix": "eslint . --ext .ts --fix --config .eslintrc",
    "lint-staged": "lint-staged",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "start": "shx rm -rf dist && tsc -b -w",
    "version": "oclif readme && git add README.md",
    "coverage": "nyc --reporter=lcov npm test",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "bugs": {
    "url": "https://github.com/thelovekesh/webscaf/issues",
    "email": "project@webscaf.org"
  },
  "keywords": [
    "cli",
    "web",
    "scaffold"
  ],
  "types": "dist/index.d.ts",
  "lint-staged": {
    "*.ts": [
      "npm run lint"
    ]
  }
}
